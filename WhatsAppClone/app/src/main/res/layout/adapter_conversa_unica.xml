<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/chat_right_msg_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

    <TextView
        android:id="@+id/id_message_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cv_remetente"
        android:padding="4dp"
        android:text="message message"
        android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_left_msg_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <TextView
            android:id="@+id/id_message_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cv2"
            android:padding="4dp"
            android:text="message message"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>